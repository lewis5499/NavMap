<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/white"> <!-- 默认状态下的颜色 -->

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- 默认状态下的颜色 -->
            <corners android:radius="20sp" /> <!-- 设置圆角半径 -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorControlHighlight" /> <!-- 按下时的颜色 -->
            <corners android:radius="20sp" /> <!-- 设置圆角半径 -->
        </shape>
    </item>

</ripple>
